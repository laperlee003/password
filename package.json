{
  "name": "password",
  "version": "1.0.0",
  "description": "密码管理工具",
  "main": "main.js",
  "author": "laperlee",
  "license": "MIT",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "make": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3"
  },
  "dependencies": {
    "compressing": "^1.10.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.1",
    "log4js": "^6.9.1"
  },
  "build": {
    "productName": "password",
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "application/resource/favicon.ico"
    }
  }
}
